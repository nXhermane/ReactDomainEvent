{
  "name": "domain-eventrix",
  "version": "1.0.9",
  "description": "A Typescript library for managing domain events, providing integration with React,React Native , and supporting DDD use cases. Designed to work in Typescript projects.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "typesVersions": {
    "*": {
      "ddd": [
        "./ddd/index.d.ts"
      ],
      "react": [
        "./react/index.d.ts"
      ]
    }
  },
  "exports": {
    "./react": {
      "default": "./react/index.js",
      "types": "./react/index.d.ts"
    },
    "./ddd": {
      "default": "./ddd/index.js",
      "types": "./ddd/index.d.ts"
    },
    ".": {
      "default": "./index.js",
      "types": "./index.d.ts"
    }
  },
  "author": "nXhermane",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nXhermane/ReactDomainEvent.git"
  },
  "scripts": {
    "start": "nodemon test.ts",
    "build": "webpack --mode production",
    "build:dev": "webpack && node clean-empty-dirs.js",
    "rollup": "npx rollup -c rollup.config.js",
    "build:doc:html": "npx documentation build ./**/*.ts -f html -o docs",
    "build:doc:md": "npx documentation build ./**/*.ts -f md -o docs/Readme.md",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@react-native-async-storage/async-storage": "^2.1.0",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.7",
    "babel-jest": "^29.7.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "documentation": "^14.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "react": "^19.0.0",
    "rollup-plugin-dts": "^6.1.1",
    "terser-webpack-plugin": "^5.3.11",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "dependencies": {
    "nanoid": "^5.0.9",
    "reflect-metadata": "^0.2.2"
  },
  "keywords": [
    "ddd",
    "domain-driven-design",
    "domain-event",
    "react",
    "react-native",
    "event-bus",
    "typescript",
    "aggregate",
    "event-sourcing",
    "event-handler",
    "domain-eventrix",
    "eventrix",
    "domain-events-library"
  ]
}
